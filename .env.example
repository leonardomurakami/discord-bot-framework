# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here

# Database Configuration
DATABASE_URL=sqlite:///data/bot.db
# For production with PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/discord_bot

# Bot Configuration
BOT_PREFIX=!
ENVIRONMENT=development
LOG_LEVEL=INFO

# Lavalink Configuration
# Use 'lavalink' when running with docker-compose, 'localhost' when running locally
LAVALINK_HOST=lavalink
LAVALINK_PORT=2333
LAVALINK_PASSWORD=youshallnotpass
LAVALINK_SECURE=false

# Optional: Music plugin configuration
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# Web Interface Configuration
WEB_PORT=8080
WEB_HOST=0.0.0.0
WEB_SECRET_KEY=your-secret-key-change-this-in-production

# Redis Configuration (for session storage)
REDIS_URL=redis://redis:6379/0
REDIS_SESSION_PREFIX=bot_session:
REDIS_SESSION_TTL=86400

# Discord OAuth2 Configuration (for web authentication)
DISCORD_CLIENT_ID=your_discord_app_client_id
DISCORD_CLIENT_SECRET=your_discord_app_client_secret
DISCORD_REDIRECT_URI=http://localhost:8080/auth/callback